@model RapportVentesDto

@{
    ViewData["Title"] = "Rapport consolid√© des ventes";
}

<h1 class="mt-4">Rapport consolid√© des ventes</h1>

<p><strong>Date du rapport :</strong> @Model.DateGeneration.ToLocalTime().ToString("f")</p>

<hr />

<h2>üìà Ventes par magasin</h2>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Magasin ID</th>
            <th>Nombre de transactions</th>
            <th>Total des ventes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vente in Model.VentesParMagasin)
        {
            <tr>
                <td>@vente.MagasinId</td>
                <td>@vente.NombreTransactions</td>
                <td>@vente.TotalVentes.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h2>üèÜ Produits les plus vendus</h2>
@if (Model.ProduitsLesPlusVendus.Any())
{
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantit√© totale vendue</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produit in Model.ProduitsLesPlusVendus)
            {
                <tr>
                    <td>@produit.Nom</td>
                    <td>@produit.QuantiteTotaleVendue</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>Aucune donn√©e disponible.</em></p>
}

<h2>üì¶ Stocks restants</h2>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Magasin</th>
            <th>Produit</th>
            <th>Quantit√© restante</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model.StocksRestants)
        {
            <tr>
                <td>@stock.MagasinId</td>
                <td>@stock.NomProduit</td>
                <td>@stock.Quantite</td>
            </tr>
        }
    </tbody>
</table>

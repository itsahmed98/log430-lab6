@model MagasinCentral.ViewModels.LigneViewModel
<div class="ligne-form row mb-2">
    <div class="col">
        <label asp-for="ProduitId"></label>
        <select asp-for="ProduitId" class="form-control"
                asp-items="(SelectList)ViewBag.Produits">
            <option value="">-- Choisir un produit --</option>
        </select>
        <span asp-validation-for="ProduitId" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="Quantite"></label>
        <input asp-for="Quantite" class="form-control" />
        <span asp-validation-for="Quantite" class="text-danger"></span>
    </div>
    <div class="col-auto align-self-end">
        <button type="button" class="btn btn-danger remove-ligne">✕</button>
    </div>
</div>

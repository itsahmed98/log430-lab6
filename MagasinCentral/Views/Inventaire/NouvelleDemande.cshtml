@{
    ViewData["Title"] = "Demande de réapprovisionnement";
}
<h2>Demande de réapprovisionnement</h2>

<form asp-action="NouvelleDemande" method="post">
    <input type="hidden" name="magasinId" value="@ViewBag.MagasinId" />
    <input type="hidden" name="produitId" value="@ViewBag.ProduitId" />
    <div class="form-group">
        <label>Quantité demandée</label>
        <input name="quantite" type="number" class="form-control" min="1" />
    </div>
    <button type="submit" class="btn btn-success">Envoyer la demande</button>
</form>
